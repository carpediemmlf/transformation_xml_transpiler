import javax.xml.parsers.DocumentBuilderFactory;
import javax.xml.parsers.DocumentBuilder;

import org.w3c.dom.Document;
import org.w3c.dom.NodeList;
import org.w3c.dom.Node;
import org.w3c.dom.Element;

import java.io.File;
import java.util.*;

public class ReadXMLFile {

    public static void main(String args[]) {
        Map<String, String> myMap = new HashMap<String, String>();


        try {

            File fXmlFile = new File("C:\\Users\\prasaha\\Documents\\talend.item");
            DocumentBuilderFactory dbFactory = DocumentBuilderFactory.newInstance();
            DocumentBuilder dBuilder = dbFactory.newDocumentBuilder();
            Document doc = dBuilder.parse(fXmlFile);

            //read this - http://stackoverflow.com/questions/13786607/normalization-in-dom-parsing-with-java-how-does-it-work
            doc.getDocumentElement().normalize();

            System.out.println("Root element :" + doc.getDocumentElement().getNodeName());

            NodeList nList = doc.getElementsByTagName("node");

            System.out.println("----------------------------");

            for (int temp = 0; temp < nList.getLength(); temp++) {

                Node nNode = nList.item(temp);


                if (nNode.getNodeType() == Node.ELEMENT_NODE) {

                    Element eElement = (Element) nNode;

                    System.out.println("Node : " + eElement.getAttribute("componentName"));
                    if (nNode.hasChildNodes()) {

                        myMap.put(eElement.getAttribute("componentName").toString(), eElement.getChildNodes().item(1).getAttributes().getNamedItem("value").getNodeValue());
                    }
                }

            }
        } catch (Exception e) {
            e.printStackTrace();
        }
        System.out.println(myMap);
    }

}
